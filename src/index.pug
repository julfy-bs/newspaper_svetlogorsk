        section.section.welcome-section#welcome
          header.header
            .header__menu
              - var menu = [['Об издании', 'Рекламодателям', 'Контакты'], ['/list.html', 'popular', 'short']];
              ul.header__menu-list
                each item, index in menu[0]
                  li.header__menu-item
                    a.header__menu-link(href="" + menu[1][index]) #{item}
              - var icons = ["version"];
              ul.header__menu-version.version
                each item in icons
                  li.version__item
                    a(href="#").version__link
                      +icon(item, "version__icon")
              .header__menu-age +16
            .header__main
              a.header__logo
                - var icons = ["logo"]
                each item in icons
                  +icon(item, "header__logo-img") 
              .header__links
                .header__links-socials
                  - var icons = ["vk", "facebook", "odnoklassniki", "twitter", "insta"];
                    ul.socials.header__socials
                      each item in icons
                        li.socials__item
                          a(href="#").socials__link
                            +icon(item, "socials__icon")
                .header__utility
                  .search#search-link
                    label.search__block
                      input(type="text" name="name" placeholder="Поиск по сайту ..." required).search__input
                    - var icons = ["search"]
                      each item in icons
                        +icon(item, "search-icon")
                  .burger-menu#hamburger-menu-link
                    - var icons = ["menu"]
                      each item in icons
                        +icon(item, "menu-icon")     
            nav.hamburger-menu#hamburger-menu
