.close-button {
  position: absolute;
  top: 40px;
  right: 35px;
  background: transparent;
  z-index: 150;
  height: 30px;
  width: 30px;


  @include phones {
    right: 1%;
    top: 1%;
  }

  @include phones {
    right: 35px;
  }
}

.close-button__img {
  fill: $grey;

  &:hover {
    fill: $links-color;
  }
}