.news {
  display: flex;
  flex-flow: column wrap;
}

.news__row {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 100%;
  max-width: 100%;

  @include tablets {
    flex-flow: row wrap;
  }

  @include phones {
    flex-direction: column;
    align-items: center;
    margin: 0px;
  }

  & .socials {
    & .socials__item {
      margin-right: 30px;

      &:last-child {
        margin-right: 0;
      }

    }
  }

  &--active {
    @include tablets {
      flex-direction: column-reverse;
      margin-bottom: 40px;
    }
  

    @include phones {
      align-items: center;
      margin-bottom: 40px;
    }
  }

  &--link {
    justify-content: start;
    margin-bottom: 40px;


  }

  &--socials {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 75px;
  }

  &--slider-form {
    // margin-bottom: 75px;
    flex-flow: row wrap;
    justify-content: center;

    @include tablets {
      flex-direction: column;
    }
  }

}

.news__column {
  margin-right: 20px;
  width: 100%;

  &:last-child {
    margin-right: 0;
  }


  @include phones {
    margin: 0;
    margin-bottom: 25px;
  }
}