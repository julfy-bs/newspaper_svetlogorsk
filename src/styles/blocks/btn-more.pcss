.btn-more__wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60px;
}

.btn-more {
  width: 600px;
  height: 60px;
  color: $links-color;
  border: solid 1px $links-color;

  @include tablets {
    width: 50%;
  }

  @include phones {
    width: 90%;
  }

  &:hover {
    color: #fff;
    background-color: $links-color;
  }
}