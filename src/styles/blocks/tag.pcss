.tag {
  color: $tag-color;
  font-size: 14px;
  font-weight: 700;
  line-height: 30px;
  text-transform: uppercase;
  padding: 0 20px;
  position: absolute;
  top: -10px;
  left: 0;
  background: url('~images/content/img-tag.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  min-width: 95px;
  text-decoration: none;

  &:hover {
    cursor: pointer;
  }

  @include tablets {
    font-size: 12px;
    min-width: 45px;
  }

  @include phones {
    font-size: 10px;
  }

}