.nav-menu {
  width: 100%;
  border-top: solid 1px $line-color;
}

.nav-menu__list {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-evenly;
  width: 100%;


  @include tablets {
    display: none;
  }
}

.nav-menu__item {
  font-size: 14px;
  font-weight: 700;
  line-height: 40px;
  margin-right: 30px;

  &:last-child {
    margin-right: 0;
  }

  @include tablets {}
}

.nav-menu__link {
  color: $text-color;
  text-decoration: none;

  &:hover {
    color: $links-color;
  }
}