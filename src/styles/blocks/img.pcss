.img {
  height: 100%;
  width: 100%;
  max-width: 345px;
  max-height: 230px;
  margin-bottom: 25px;

  @include tablets {
    max-width: 220px;
    max-height: 150px;
  }

  @include phones {
    max-width: 360px;
    max-height: 250px;
  }

  &--big {
    height: 100%;
    width: 100%;
    max-width: 720px;
    max-height: 350px;

    @include tablets {
      max-width: 420px;
      max-height: 250px;
    }

    @include phones {
      max-width: 360px;
      max-height: 350px;
      margin-bottom: 35px;
    }
  }

  &--small {
    height: 100%;
    width: 100%;
    max-width: 250px;
    max-height: 170px;
    margin-bottom: 30px;

    @include tablets {
      max-width: 170px;
      max-height: 130px;
    }

    @include phones {
      max-width: 360px;
      max-height: 350px;
    }
  }

  &--captcha {
    max-width: 100px;
    max-height: 50px;
  }
}